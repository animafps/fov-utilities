{
	"name": "fov-utilities",
	"version": "1.1.7",
	"license": "GPL-3.0-or-later",
	"description": "Set of helper functions to calculate different FoVs based off the FILM notation standard of FoV scaling and aspect ratio.",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"module": "dist/index.mjs",
	"exports": {
		"import": "./dist/index.mjs",
		"require": "./dist/index.js",
		"default": "./dist/index.mjs"
	},
	"keywords": [
		"field-of-view",
		"fov",
		"helper",
		"math",
		"gaming",
		"video-games"
	],
	"bugs": {
		"url": "https://github.com/animafps/fov-utilities/issues"
	},
	"author": {
		"name": "Anima",
		"email": "animafps@protonmail.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/animafps/fov-utilities"
	},
	"homepage": "https://fov.js.org",
	"scripts": {
		"lint": "eslint src --ext ts --fix",
		"format": "prettier --write {src,tests}/**/*.ts",
		"build": "tsup",
		"build:deno": "node ./scripts/deno.mjs",
		"clean": "tsc -b src --clean",
		"watch": "tsc -b src -w",
		"commit": "git-cz",
		"cz": "git-cz",
		"update": "yarn upgrade-interactive",
		"release": "standard-version",
		"pretty-quick": "pretty-quick --staged --pattern '{src,tests}/**/*.ts'",
		"postinstall": "husky install",
		"docs": "typedoc",
		"prepublishOnly": "pinst --disable && yarn build",
		"postpublish": "pinst --enable"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.0.3",
		"@commitlint/config-conventional": "^17.0.3",
		"@types/eslint": "^8",
		"@types/node": "^16.11.48",
		"@types/prettier": "^2",
		"@typescript-eslint/eslint-plugin": "^5.33.0",
		"@typescript-eslint/parser": "^5.33.0",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^8.22.0",
		"eslint-config-prettier": "^8.5.0",
		"husky": "^8.0.1",
		"lint-staged": "^12.5.0",
		"pinst": "^3.0.0",
		"prettier": "^2.7.1",
		"pretty-quick": "^3.1.3",
		"standard-version": "^9.3.2",
		"tsup": "^5.12.9",
		"typedoc": "^0.23.10",
		"typescript": "^4.7.4"
	},
	"files": [
		"dist",
		"!dist/*.tsbuildinfo"
	],
	"engines": {
		"node": "16.x"
	},
	"config": {
		"commitizen": {
			"path": "cz-conventional-changelog"
		}
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.{mjs,js,ts}": "eslint --fix --ext mjs,js,ts"
	},
	"packageManager": "yarn@3.2.2"
}
